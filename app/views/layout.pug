doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title #{title} - Ride Sharing App
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/main.css')
  body(class=userId ? 'authenticated' : '')
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.mb-4
      .container
        a.navbar-brand(href='/') Ride Sharing App
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/users') Users
            li.nav-item
              a.nav-link(href='/rides') Listings
            li.nav-item
              a.nav-link(href='/tags') Tags
    
    .container
      block content
    
    footer.footer.mt-5.py-3.bg-light
      .container.text-center
        p.text-muted &copy; 2023 Ride Sharing App - University of Roehampton
    
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
    script(src='/js/auth.js')
    block scripts 